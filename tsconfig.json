{
    "compilerOptions": {
        "target": "ES2019",
        "paths": {
            "@/*": ["./*"]
        },
        "module": "ESNext",
        "jsx": "react-jsx",
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/__tests__/*", "**/*.stories.tsx"]
}
